# AgriWatt Voice Bot Environment Configuration
# Copy this file to .env and fill in your values

# Google Cloud Configuration
# Path to your Google Cloud service account JSON file
GOOGLE_CREDENTIALS_PATH=./google-credentials.json
# Alternatively, set the JSON content directly (not recommended for production)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account"...}

# Chatbot Configuration
CHATBOT_URL=http://localhost:8000/api/chatbot

# Audio Processing Configuration
MAX_AUDIO_SIZE_MB=10
AUDIO_TIMEOUT_SECONDS=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security Configuration
API_KEY_REQUIRED=false
# API_KEY=secret_api_key_here

# Production Settings
ENVIRONMENT=development
DEBUG=true

# Database Configuration (if needed for logging/analytics)
# DATABASE_URL=postgresql://user:password@localhost:5432/agribot

# Redis Configuration (for caching/rate limiting)
# REDIS_URL=redis://localhost:6379

# Monitoring and Analytics
# SENTRY_DSN=https://sentry-dsn
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID